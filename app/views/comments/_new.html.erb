<div class= "container-fuild mt-4">
  <%= form_for(@comment, url: comment_create_path(@post.id)) do |f| %>
    <%= f.label :comment_text, "コメントを追加" %>
    <%= f.text_field :comment_text, class:"form-control mt-2" %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit "コメント追加", class:"btn btn-primary mt-2" %>
  <% end %>
</div>