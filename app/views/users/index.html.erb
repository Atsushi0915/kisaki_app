<div class="container mt-2">
  <%= tag.h1 "ユーザー一覧" %>
    <table class="table">
      <thead>
        <%= tag.tr %>
          <%= tag.th "名前" %>
          <%= tag.th "メールアドレス" %>
      <thead>
      <tbody>
        <% @users.each do |user| %>
          <%= tag.tr %>
            <%= tag.td user.name %>
            <%= tag.td user.email %>
        <% end %>
      </tbody>
    </table>
</div>